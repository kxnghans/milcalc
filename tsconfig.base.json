{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@military-calculator/source"],
    "paths": {
      "@military-calculator/logic": ["libs/shared/logic/src/index.ts"],
      "@military-calculator/types": ["libs/shared/types/src/index.ts"],
      "@military-calculator/ui": ["libs/shared/ui/src/index.ts"]
    }
  }
}
